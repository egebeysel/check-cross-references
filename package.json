{
  "name": "check-cross-references",
  "description": "Checks checkboxes of the cross-references that are left as comments to PRs, when the referenced PR is merged.",
  "version": "0.0.0",
  "author": "",
  "private": true,
  "homepage": "https://github.com/egebeysel/check-cross-references#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egebeysel/check-cross-references.git"
  },
  "bugs": {
    "url": "https://github.com/egebeysel/check-cross-references.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "Cross-References",
    "Pull Request"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.js --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "all": "npm run lint && npm run package"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "./.github/linters/.eslintrc.yml"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/preset-env": "^7.23.6",
    "@vercel/ncc": "^0.38.1",
    "babel-preset-jest": "^29.6.3",
    "eslint": "^8.54.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.0",
    "make-coverage-badge": "^1.2.0"
  }
}
